				{
					"name": "User Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const jsonData=pm.response.json();\r",
									"const accessToken=jsonData.token;\r",
									"pm.environment.set(\"accessToken\",accessToken);\r",
									"pm.collectionVariables.set(\"accessToken\",accessToken);\r",
									"\r",
									"pm.test(\"Check if login is successfull\", ()=>{\r",
									"    pm.expect(\"Login successful\").to.equal(jsonData.message);\r",
									"})\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
